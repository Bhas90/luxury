{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",         // All backend API requests
      "dest": "/server.js"        // Goes to your Node.js backend
    },
    {
      "src": "/(.*)",             // Everything else (frontend)
      "dest": "/build/index.html"
    }
  ]
}
